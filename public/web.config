<?xml version="1.0" encoding="UTF-8"?>

<!-- Configuration for Python FastCGI with IIS -->
<configuration>
    <system.webServer>

        <!-- Default document configuration -->
        <defaultDocument>
            <files>
                <add value="index.py" />
            </files>
        </defaultDocument>

        <!-- Handler configuration for Python -->
        <handlers>
            <add 
                name="Python FastCGI" 
                path="*" 
                verb="*" 
                modules="FastCgiModule" 
                scriptProcessor="%PYTHONHOME%\python.exe|%PYTHONHOME%\Lib\site-packages\wfastcgi.py" 
                resourceType="Unspecified" 
            />
        </handlers>

    </system.webServer>

    <!-- Application settings -->
    <appSettings>
        <add key="PYTHONPATH" value="FULL_BASE_PATH_PROJECT" />
        <add key="WSGI_HANDLER" value="index.wsgi_handler" />
    </appSettings>
</configuration>
